<resources>

    <style name="Base.Theme.Storey" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/gray</item>
    </style>

    <style name="Theme.Storey" parent="Base.Theme.Storey">
        <item name="android:statusBarColor">?colorPrimary</item>
    </style>

    <style name="Theme.Storey.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Storey.AppWidgetContainer" parent="Theme.Storey.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>